{
  "hooks": [
    {
      "id": "unified-python-fixer",
      "name": "Python代码统一自动修复 (已被现代化工具替代)",
      "description": "统一的Python代码自动修复系统，已被Ruff+MyPy替代",
      "file": "unified-python-fixer.kiro.hook",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "*.py"
        }
      ],
      "enabled": false,
      "priority": 10
    },
    {
      "id": "test-runner",
      "name": "自动测试运行",
      "description": "保存测试文件或源文件时自动运行相关测试",
      "file": "test-runner.md",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "test_*.py"
        },
        {
          "type": "file_save",
          "pattern": "*_test.py"
        }
      ],
      "enabled": true,
      "priority": 2
    },
    {
      "id": "database-migration",
      "name": "数据库迁移检查",
      "description": "修改数据模型时检查是否需要数据库迁移",
      "file": "database-migration.md",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "models/*.py"
        },
        {
          "type": "file_save",
          "pattern": "data/migrations/*.py"
        },
        {
          "type": "file_save",
          "pattern": "data/database.py"
        }
      ],
      "enabled": true,
      "priority": 3
    },
    {
      "id": "ui-component-validator",
      "name": "UI组件验证",
      "description": "保存UI组件文件时验证组件规范",
      "file": "ui-component-validator.md",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "ui/**/*.py"
        }
      ],
      "enabled": true,
      "priority": 4
    },
    {
      "id": "documentation-updater",
      "name": "文档自动更新",
      "description": "修改API或配置时检查文档同步",
      "file": "documentation-updater.md",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "services/*.py"
        },
        {
          "type": "file_save",
          "pattern": "config/*.py"
        },
        {
          "type": "file_save",
          "pattern": "README.md"
        }
      ],
      "enabled": true,
      "priority": 5
    },
    {
      "id": "dependency-checker",
      "name": "依赖检查",
      "description": "修改导入或pyproject.toml时检查依赖一致性",
      "file": "dependency-checker.md",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "pyproject.toml"
        },
        {
          "type": "file_save",
          "pattern": "uv.lock"
        }
      ],
      "enabled": true,
      "priority": 6
    },
    {
      "id": "performance-profiler",
      "name": "性能分析",
      "description": "手动触发或保存关键文件时分析性能",
      "file": "performance-profiler.md",
      "triggers": [
        {
          "type": "manual"
        },
        {
          "type": "file_save",
          "pattern": "services/*.py"
        },
        {
          "type": "file_save",
          "pattern": "data/*.py"
        }
      ],
      "enabled": true,
      "priority": 7
    },
    {
      "id": "modern-code-quality",
      "name": "现代化代码质量检查",
      "description": "使用Ruff、MyPy和UV的现代化代码质量检查",
      "file": "modern-code-quality.kiro.hook",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "*.py"
        }
      ],
      "enabled": true,
      "priority": 1
    },
    {
      "id": "uv-dependency-manager",
      "name": "UV依赖管理器",
      "description": "基于UV的现代化依赖管理系统",
      "file": "uv-dependency-manager.kiro.hook",
      "triggers": [
        {
          "type": "file_save",
          "pattern": "pyproject.toml"
        },
        {
          "type": "file_save",
          "pattern": "uv.lock"
        }
      ],
      "enabled": true,
      "priority": 2
    }
  ],
  "settings": {
    "auto_execute": true,
    "show_notifications": true,
    "max_concurrent_hooks": 3,
    "timeout_seconds": 30
  }
}
